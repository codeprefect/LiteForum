{
    "version": "2.0.0",
    "command": "dotnet",
    "type": "shell",
    "options": {
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "cwd": "${workspaceFolder}/src/LiteForum"
    },
    "tasks": [
        {
            "label": "build",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "args": [
                "run"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "update db",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "args": [
                "publish",
                "-o",
                "../../production"
            ],
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Production"
                }
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "run published",
            "command": "dotnet",
            "args": [
                "exec",
                "LiteForum.dll"
            ],
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Production"
                },
                "cwd": "production"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "ui_restore",
            "command": "dotnet",
            "args": [
                "restore"
            ],
            "options" : {
                "cwd": "src/LiteForum_UI"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
